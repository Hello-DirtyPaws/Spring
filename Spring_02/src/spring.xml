<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN 2.0//EN" "http://www.springframework.org/dtd/spring-beans-2.0.dtd">

<beans>
	<bean id="tri" class="org.suraj.model.Triangle" autowire="byName" name="tri-alias_1" scope="prototype">
		<property name="p1" ref="zeroPoint"/>
	</bean>
	<alias name="tri" alias="tri-alias_2"/>
	
	
	<bean id="tri-point-list" class="org.suraj.model.TrianglePointList">
		<property name="points">
			<list>
				<ref bean="zeroPoint"/>
				<ref bean="p2"/>
				<ref bean="p3"/>
			</list>
		</property>
	</bean>

	<bean id="zeroPoint" class="org.suraj.model.Point" scope="prototype">
		<property name="x" value="0"/>
		<property name="y" value="0"/>
	</bean>
	
	<bean id="p2" class="org.suraj.model.Point" scope="prototype">
		<property name="x" value="10"/>
		<property name="y" value="20"/>
	</bean>
	
	<bean id="p3" class="org.suraj.model.Point" scope="prototype">
		<property name="x" value="-40"/>
		<property name="y" value="-30"/>
	</bean>
	
</beans>

